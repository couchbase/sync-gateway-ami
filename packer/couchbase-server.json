{
    "variables":{

    },
    "provisioners":[
        {
            "type":"file",
            "source":"disable-transparent-hugepages",
            "destination":"/tmp/disable-transparent-hugepages"
        },
        {
            "type":"shell",
            "inline":[
                "sudo cp /tmp/disable-transparent-hugepages /etc/init.d/disable-transparent-hugepages",
                "sudo chmod 755 /etc/init.d/disable-transparent-hugepages",
                "sudo /etc/init.d/disable-transparent-hugepages start",
                "sudo chkconfig --add disable-transparent-hugepages"
            ]
        },
        {
            "type":"shell",
            "inline":[
                "sudo yum install -y wget openssl awscli git docker",
                "wget {{user `couchbase_server_package_base_url`}}/{{user `couchbase_server_package`}}",
                "sudo rpm -i {{user `couchbase_server_package`}}",
                "git clone https://github.com/couchbase/sync-gateway-ami.git",
                "cd sync-gateway-ami",
                "git checkout {{user `couchbase_sync_gateway_version`}}"
            ]
        },
        {
            "type":"shell",
            "inline":[
                "rm ~/.ssh/authorized_keys",
                "sudo rm /root/.ssh/authorized_keys"
            ]
        }
    ],
    "builders":[
        {
            "type":"amazon-ebs",
            "access_key":"{{user `aws_access_key`}}",
            "secret_key":"{{user `aws_secret_key`}}",
            "region":"{{user `build_aws_region`}}",
            "force_deregister":true,
            "source_ami":"{{user `source_ami`}}",
            "instance_type":"t2.micro",
            "ssh_username":"{{user `ssh_username`}}",
            "ssh_pty":true,
            "ami_name":"Couchbase Server {{user `couchbase_server_edition`}} {{user `couchbase_server_version`}} {{user `base_ami_name`}}",
            "ami_groups":"all",
            "ami_regions":[
                "us-west-1"
            ]
        }
    ]
}